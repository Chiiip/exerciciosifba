<h1>Login</h1>
	<% if @user_session.errors.has_key? :base %>
		<div id="error_explanation">
			<%= @user_session.errors[:base].join(', ') %>
		</div>
		<% end %>
		<%= form_for @user_session do |f| %>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.submit %>
		</p>
		<% end %>
		<p>
			<%= link_to t('.sign_up'), new_user_path %>
		</p>